<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Opacity="0.9">
        <Grid.Background>
            <ImageBrush ImageSource="/172967-list-zelenyj-temnaya_zelen-temno_zelenye_listya-rastenie-3840x2160.jpg"/>
        </Grid.Background>
        <Label Content="LOGIN" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" FontSize="40" FontFamily="Arial Black"  Foreground="Wheat"/>
        
        <Button Content="Sign in" HorizontalAlignment="Center" Margin="0,282,0,0" VerticalAlignment="Top" Height="38" Width="152" FontSize="20" FontFamily="Arial Black" Foreground="Black" Click="SignInButton_Click" Command=""/>        
        <Button Content="Clear" HorizontalAlignment="Center" Margin="0,325,0,0" VerticalAlignment="Top" Height="38" Width="152" FontSize="20" FontFamily="Arial Black" Foreground="Black" Click="ClearButton_Click"/>
        
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Center" Margin="0,151,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="310" Height="30"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Password" VerticalAlignment="Center" Width="310" Height="30"/>
       
        <Rectangle HorizontalAlignment="Center" Height="2" Margin="0,264,0,0" Stroke="Black" VerticalAlignment="Top" Width="406"/>

    </Grid>
</Window>
