<Window x:Class="WpfApp1.NotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notes" Height="450" Width="800">
    <Grid Opacity="0.9">
        <Grid.Background>
            <ImageBrush ImageSource="/172967-list-zelenyj-temnaya_zelen-temno_zelenye_listya-rastenie-3840x2160.jpg"/>
        </Grid.Background>
        <Label Content="Notes" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" FontSize="40" FontFamily="Arial Black" Foreground="Wheat"/>

        <TextBox x:Name="NotesTextBox" HorizontalAlignment="Center" Margin="0,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="310" Height="30"/>

        <Button Content="Add" HorizontalAlignment="Left" Margin="451,299,0,0" VerticalAlignment="Top" Height="38" Width="152" FontSize="20" FontFamily="Arial Black" Foreground="Black" Click="AddButton_Click"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="197,299,0,0" VerticalAlignment="Top" Height="38" Width="152" FontSize="20" FontFamily="Arial Black" Foreground="Black" Click="DeleteButton_Click"/>

        <ListBox x:Name="NotesListBox" HorizontalAlignment="Center" Margin="0,164,0,0" VerticalAlignment="Top" Width="310" Height="100"/>

        <Rectangle HorizontalAlignment="Center" Height="2" Margin="0,280,0,0" Stroke="Black" VerticalAlignment="Top" Width="406"/>
    </Grid>
</Window>